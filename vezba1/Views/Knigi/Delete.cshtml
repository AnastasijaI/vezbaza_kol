@model vezba1.Models.Kniga
@{
    ViewData["Title"] = "Delete book";
}
<body style="background-image: url('https://wallpapercave.com/wp/wp2308537.jpg');">
    <div class="row text">
        <div class="col-md-8 offset-2">
            <p>
                <h1 style="text-align: center;">Delete @Model.Naslov</h1>
            </p>
            <div class="row">
                <div class="col-md-8 offset-2">
                    <div class="form-group text-center">
                        <img id="Slika" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="SlikaUrl" class="control-label"></label>
                        <input type="url" asp-for="SlikaUrl" class="form-control" />
                        <span asp-validation-for="SlikaUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Naslov" class="control-label"></label>
                        <input asp-for="Naslov" class="form-control" />
                        <span asp-validation-for="Naslov" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Godina" class="control-label"></label>
                        <input asp-for="Godina" class="form-control" />
                        <span asp-validation-for="Godina" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BrStrani" class="control-label"></label>
                        <input asp-for="BrStrani" class="form-control" />
                        <span asp-validation-for="BrStrani" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Opis" class="control-label"></label>
                        <input asp-for="Opis" class="form-control" />
                        <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Zanr" class="control-label"></label>
                        <input asp-for="Zanr" class="form-control" />
                        <span asp-validation-for="Zanr" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Izdavac" class="control-label"></label>
                        <input asp-for="Izdavac" class="form-control" />
                        <span asp-validation-for="Izdavac" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tirazh" class="control-label"></label>
                        <input asp-for="Tirazh" class="form-control" />
                        <span asp-validation-for="Tirazh" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>