@model Avtor
@{
    ViewData["Title"] = "Delete author";
}
<body style="background-image: url('https://wallpapercave.com/wp/wp2308537.jpg');">
    <div class="row text">
        <div class="col-md-8 offset-2">
            <p>
                <h1 style="text-align: center;">Delete @Model.Ime @Model.Prezime</h1>
            </p>
            <div class="row">
                <div class="col-md-8 offset-2">
                    <div class="form-group">
                        <label asp-for="Ime" class="control-label"></label>
                        <input asp-for="Ime" class="form-control" />
                        <span asp-validation-for="Ime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Prezime" class="control-label"></label>
                        <input asp-for="Prezime" class="form-control" />
                        <span asp-validation-for="Prezime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nacionalnost" class="control-label"></label>
                        <input asp-for="Nacionalnost" class="form-control" />
                        <span asp-validation-for="Nacionalnost" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pol" class="control-label"></label>
                        <input asp-for="Pol" class="form-control" />
                        <span asp-validation-for="Pol" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DatumRagjanje" class="control-label"></label>
                        <input asp-for="DatumRagjanje" class="form-control" />
                        <span asp-validation-for="DatumRagjanje" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>